# Echo Platform Environment Configuration
# Copy this file to `.env` and fill in your API keys and endpoints

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Optional: Other LLM Providers
CLAUDE_API_KEY=your-claude-api-key
OLLAMA_ENDPOINT=http://localhost:11434

# MCP Server Configuration
# Comma-separated list of MCP server URLs
MCP_SERVER_URLS=http://localhost:8001,http://localhost:8002,http://localhost:8003,http://localhost:8004

# MCP Client Settings
MCP_DISCOVERY_TIMEOUT=5
MCP_EXECUTION_TIMEOUT=15
MCP_HEALTH_CHECK_INTERVAL=30
MCP_CACHE_TTL=300
MCP_MAX_RETRIES=3
MCP_PARALLEL_LIMIT=10

# Enhanced Features
USE_INTELLIGENT_SELECTION=true

# Web Server Settings (for web search MCP server)
SEARCH_API_KEY=your-search-api-key-optional
WEB_RATE_LIMIT=10
WEB_CACHE_TTL=300
WEB_MAX_CONTENT=50000

# Development Settings
DEBUG=false
LOG_LEVEL=INFO
